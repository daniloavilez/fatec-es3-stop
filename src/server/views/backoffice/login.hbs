

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        {{#if flashMessage }}
            <div class="alert alert-warning" role="alert">
                {{ flashMessage }}
            </div>
        {{/if}}

        <div>
            <form method="POST" action="/backoffice/login">
                <div class="form-group">
                    <label for="username">Usuário</label>
                    <input type="text" name="username" class="form-control" id="username" placeholder="Digite o seu usuário">
                </div>
                <div class="form-group">
                    <label for="password">Senha</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Digite a sua senha">
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary">Login</button>
                </div>
            </form>
        </div>
        
    </div>
    <div class="col-md-3"></div>
   
</div>

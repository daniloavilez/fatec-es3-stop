<div class="container">
    <div class="row">
        <div class="page-header">
            <h1>Cadastro de Categorias</h1>
        </div>
    </div>

    <div class="row">
         <div class="panel panel-default">
            <div class="panel-heading">Cadastrar Categoria</div>
            <div class="panel-body">
                <div class="col-md-6">
                    <form id="nova-categoria" method="POST" action="/backoffice/login" autocomplete="off">
                        <div class="form-group">
                            <label for="categoria">Nome</label>
                            <input type="text" name="categoria" class="form-control" id="categoria" placeholder="Digite o nome da categoria" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">Categorias Cadastradas</div>
            <div class="panel-body">
                <div id="categorias-cadastradas">
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/backoffice/public/js/categories.js"></script>